<!DOCTYPE html>
<!--[if lt IE 7]>
<html lang="en" ng-app="conicyt-myapp" class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>
<html lang="en" ng-app="conicyt-myapp" class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>
<html lang="en" ng-app="conicyt-myapp" class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html lang="en" ng-app="cnc-myapp" class="no-js"> <!--<![endif]-->
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Módulo de búsqueda de productos</title>
    <meta name="description"
          content="Modulo de búsqueda de productos hecho en symfony 2 + angularjs">
    <meta name="keywords" content="symfony2, angularjs">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block stylesheets %}
        <!-- estilos externos -->
        <link rel="stylesheet" href="{{ asset ('public/js/app/assets/css/libraries/bootstrap.min.css') }}" type='text/css' media='all'>

        <!-- estilos internos -->
        <link rel="stylesheet" href="{{ asset ('public/js/app/assets/css/app.css') }}">
    {% endblock %}
</head>
<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <a class="navbar-brand" href="#">Miguel Nuñez </a>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
              <ul class="nav navbar-nav" ng-controller="NavigationCtrl">
                <li ng-class="{ active: isCurrentPath('product')}">
                    <a ui-sref="product">Búsqueda Productos</a>
                </li>
                <li ng-class="{ active: isCurrentPath('logs')}">
                    <a ui-sref="logs">Estadisticas</a>
                </li>
              </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <!--[if lt IE 7]>
        <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a
                href="http://browsehappy.com/">upgrade
            your browser</a> to improve your experience.</p>
        <![endif]-->

        <div ui-view></div>
    </div>
    <!-- componentes externas -->
    {% block javascripts %}
        <script src="{{ asset ('public/js/app/libraries/angular/angular.js') }}"></script>
        <script 
            src="{{ asset ('public/js/app/libraries/angular-ui-router/release/angular-ui-router.min.js') }}">
        </script>
        <script src="https://code.angularjs.org/1.4.9/angular-resource.min.js"></script>
        <script src="{{ asset ('public/js/app/libraries/jquery/dist/jquery.min.js') }}"></script>
        <script src="{{ asset ('public/js/app/libraries/bootstrap/dist/js/bootstrap.min.js') }}"></script>
        
        <!-- scripts -->
        <script src="{{ asset ('public/js/app/app.js') }}"></script>
        <script src="{{ asset ('public/js/app/routing.js') }}"></script>
        <script src="{{ asset ('public/js/app/shared/directives.js') }}"></script>
        <script src="{{ asset ('public/js/app/shared/filters.js') }}"></script>
        <script src="{{ asset ('public/js/app/shared/services.js') }}"></script>
        <script src="{{ asset ('public/js/app/shared/functions.js') }}"></script>        
        <script src="{{ asset ('public/js/app/pages/product/product.js') }}"></script>
        <script src="{{ asset ('public/js/app/pages/logs/logs.js') }}"></script>
    {% endblock %}
</body>
</html>
